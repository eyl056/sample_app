<p id="notice"><%= notice %></p>

<h1>Opportunities</h1>

<table>
  <thead>
    <tr>
      <th>Opportunity</th>
      <th>Created at</th>
      <th>Date</th>
      <th>Estimated close</th>
      <th>Confidence</th>
      <th>Value</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.opportunity_id %></td>
        <td><%= opportunity.created_at %></td>
        <td><%= opportunity.date %></td>
        <td><%= opportunity.estimated_close %></td>
        <td><%= opportunity.confidence %></td>
        <td><%= opportunity.value %></td>
        <td><%= opportunity.notes %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

